<%- include('header'); -%>

<h1>Articles</h1>
<div class="list-controls">
    <div></div>
    <div class="page-controls">
        <% if(page > 1) { %>
            <a href="/?page=<%= page - 1 %>">&lt;&lt;Prev</a>
        <% } %>
        <span><%= page %></span>
        <% if(!last) { %>
        <a href="/?page=<%= page + 1 %>">Next&gt;&gt;</a>
        <% } %>
    </div>
    <div class="number-row-selector">
        <a href="/?numRows=10">10</a>
        <a href="/?numRows=25">25</a>
        <a href="/?numRows=50">50</a>
        <a href="/?numRows=all">All</a>       
    </div>
</div>
<table>
    <thead>
        <tr>
            <th class="col">ID</th>
            <th class="col">Title</th>
            <th class="col">Author</th>
            <th class="col">Body</th>
        </tr>
    </thead>
    <tbody>
        <% if(articles) { %>
            <% for(a of articles) { %>
                <tr id="<%= a.id %>" class="row">
                    <td><%= a.id %></td>
                    <td><%= a.title %></td>
                    <td><%= a.author %></td>
                    <td><%= a.body %></td>
                </tr>
            <% } %>
        <% } %>
    </tbody>
</table>

<%- include('footer'); -%>